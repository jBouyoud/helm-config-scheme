{
  "name": "helm-config-scheme",
  "engines": {
    "node": ">=16",
    "yarn": ">=1"
  },
  "private": true,
  "scripts": {
    "ci": "yarn lint",
    "lint": "yarn lint:prettier && yarn lint:commit",
    "lint:commit": "commitlint --from=$( git rev-list --tags --max-count=1 )",
    "lint:prettier": "yarn prettier -l '**/*.{md,yaml}'",
    "lint:prettier:fix": "yarn prettier --write '**/*.{md,yaml}'",
    "postinstall": "husky install"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-leading-blank": [
        2,
        "always"
      ],
      "scope-enum": [
        2,
        "always",
        [
          "deps",
          "deps-dev"
        ]
      ],
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "release",
          "style",
          "test"
        ]
      ],
      "body-max-line-length": [
        0
      ],
      "subject-case": [
        2,
        "never",
        [
          "start-case",
          "pascal-case",
          "upper-case"
        ]
      ]
    }
  },
  "lint-staged": {
    "*.{md,yaml}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "arrowParens": "avoid"
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "16.2.1",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.4",
    "@semantic-release/npm": "9.0.1",
    "@semantic-release/release-notes-generator": "10.0.3",
    "husky": "7.0.4",
    "lint-staged": "12.3.7",
    "prettier": "2.6.2",
    "semantic-release": "19.0.2"
  },
  "version": "1.3.2"
}
